{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"jsx": "react",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*", "src/*", "src/browser/*", "src/electron/*"]
		}
	},
	"include": ["src/**/*"]
}
